#!/bin/bash
# (c) 2000 Red Hat, Inc.

PATH=$PATH:~/bin
export PATH
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:~/lib
export LD_LIBRARY_PATH

eval `ssh-agent`

xscreensaver -lock-mode -no-splash &

rxvt -tr +sb -fn '-*-lucidatypewriter-medium-r-*-*-10-*' -name dockterm -tn dockterm -fg lightseagreen &
(sleep 1 && exec wmclock -led LightSeaGreen -shape -exe "xscreensaver-command -lock" -12) &
#(sleep 3 && exec wmfsm --fire --blink) &
(sleep 4 && exec wmmon) &
(sleep 5 && exec wminet) &
(sleep 6 && exec wmifs) &
(sleep 7 && exec wmswallow -focus -geom 116x48 dockterm) &
(sleep 8 && exec wmnetselect) &
(sleep 9 && exec wmWeather -s CYOW -W -m) &
# (sleep 9 && exec wmsvencd -w) &
# (sleep 10 && exec wmmixer -l LightSeaGreen -w) &

(sleep 11 && bsetroot -gradient flatverticalgradient -from steelblue4 -to gray10) &
(sleep 12 && ssh-add) &

bbpager &
bbkeys -t &

exec blackbox
